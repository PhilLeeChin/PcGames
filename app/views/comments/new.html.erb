<% if @game %>
<h1>Add Comment for <%= @game.title%>:</h1>
<% else %>
<h1>New Comment:</h1>
<% end %>
<%= form_for([@game, @comment]) do |f|%>
    <% if !@comment.game %>
        <%= f.label :game %>
        <%= f.collection_select :game_id, Game.all, :id, :title %>
    <% else %>
        <%= f.hidden_field :game_id %>
    <% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit %>
<% end %>