
<div class="flex-parent jc-center">
    <h1> Login Page </h1>
    <h1>***********************************************</h1>
    <%= form_for :user, url: "/login" do |f| %>
        <p><%= flash[:error] %> <br></br> 
        <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %> <br>
        </div>
        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %> <br>
        </div>
        <div class="submit">
            <%= f.submit class: "Login" %>
        </div>
    <% end%>
</div>
<%= form_tag("/auth/google_oauth2") do %>
<div class="google">
    <%= submit_tag "Google Login"%>
</div>
<% end %>